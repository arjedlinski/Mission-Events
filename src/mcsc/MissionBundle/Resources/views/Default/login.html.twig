{% extends 'common.html.twig' %}
{% block contents %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData) }}</div>
{% endif %}


<form action="{{ path('login_check') }}" method="post">
  <div class="form-group">
    <label for="username">Nazwa użytkownika:</label>
    <input type="text" class="form-control" id="username" name="_username" placeholder="Nazwa użytkownika" value="{{ last_username }}">
  </div>
  <div class="form-group">
    <label for="password">Hasło:</label>
    <input type="password" class="form-control" id="password" name="_password" placeholder="Hasło">
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox" name="_remember_me" id="_remember_me"> Zapamiętaj na tym urządzeniu.
     </label>
  </div>
  <button type="submit" class="btn btn-default">Zaloguj</button>
</form>

{% endblock %}